pipeline {
    agent any
    tools {
        maven 'maven385'
    }
    stages{
        stage ('Get the source code') {
            steps {
                git branch: 'main', url: 'https://github.com/c506521615/docker-jenkins-pipeline.git'
            }
        }
        stage ('Compile App') {
            steps {
                sh 'mvn compile'
            }
        }
        stage ('Code Scan') {
            steps {
                sh 'mvn -P metrics pmd:pmd'
            }
        }
        stage ('Unit Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage ('Package') {
            steps {
                sh 'mvn package'
            }
        }
    }
}
